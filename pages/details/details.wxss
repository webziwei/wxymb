.image_style {
      width: 100%;
}

.info_top {
      width: 100%;
      padding-top: 10px;
      background-color: #fff;
      margin-bottom: 10px;
}

.info_top .shop_title {
      width: 100%;
      height: 40px;
      float: left;
      font-size: 14px;
      padding-left: 10px;
      box-sizing: border-box;
}

.info_top .shop_price {
      width: 100%;
      height: 40px;
      line-height: 40px;
      clear: both;
      border-bottom: 1px solid #ccc;
}

.info_top .shop_price text {
      color: red;
}

.info_top .shop_price .new_price {
      font-size: 14px;
      margin: 0 10px;
}

.info_top .shop_price .old_price {
      font-size: 12px;
      color: #ccc;
      text-decoration: line-through;
}

.info_top .info_tips {
      font-size: 10px;
      height: 20px;
      line-height: 20px;
      padding-left: 10px;
      color: #777;
}

.shop_pic {
      background-color: #fff;
      margin-bottom: 60px;
}

.shop_pic .tilte {
      text-align: center;
      font-size: 12px;
      color: #333;
      height: 40px;
      line-height: 40px;
      padding-left: 10px;
}

.shop_pic image {
      width: 100%;
}

.foot_nav {
      width: 100%;
      height: 60px;
      background-color: #ccc;
      position: fixed;
      bottom: 0;
      left: 0;
      display: flex;
      text-align: center;
      line-height: 60px;
}

.foot_nav .btn {
      flex: 1;
      color: #fff;
      font-size: 12px;
}

.foot_nav .btn1 .icon {
      width: 20px;
      height: 20px;
      position: relative;
      margin: 20px auto;
}

.foot_nav .btn1 .icon image {
      width: 20px;
      height: 20px;
      display: block;
}

.foot_nav .btn1 .icon text {
      position: absolute;
      width: 14px;
      height: 14px;
      font-size: 10px;
      background-color: #f00;
      text-align: center;
      line-height: 14px;
      top: -4px;
      right: -7px;
      border-radius: 50%;
      color: #fff;
}

.foot_nav .btn1 {
      background-color: #fff;
}

.foot_nav .btn2 {
      background-color: #ffa500;
}

.foot_nav .btn3 {
      background-color: #00aaef;
}

.foot_nav .btn4 {
      background-color: #69c3aa;
}
